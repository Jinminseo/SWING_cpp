#include <iostream>
using namespace std;

int main(void)
{
    int month, day, num;  // 달(월) 입력받는 변수

    cout << "============ 2023 To Do ============" << endl << endl;
    cout << "원하는 달(월)을 입력하세요 > ";
    cin >> month;
    cout << "원하는 날(일)을 입력하세요 > ";
    cin >> day;

    while (1)
    {
        cout << endl << "====================================" << endl << endl;

        /* TO DO 리스트와 COMPLETE 리스트 출력되도록 코드 추가 */

        cout << "1. 할 일 추가" << endl;
        cout << "2. 완료한 일 추가" << endl;
        cout << "3. 종료" << endl << endl;
        cout << "번호를 입력하세요 >> ";
        cin >> num;
        cout << endl;

        if (num == 1)
        {
            cout << "[ 할 일 추가 ]" << endl << endl;
            cout << "할 일을 입력하세요(완료 후 'end' 입력): ";
            /* 할 일을 입력하면 TO DO 리스트에 자동으로 추가되도록 코드 추가 */
            /* 할 일 추가 입력이 끝나고 'end'를 입력하면 반복문으로 다시 1~3번 항목 출력되도록 코드 추가 */
            /* 위의 과정처럼 'end' 입력하면 할 일 추가된 TO DO 리스트와 COMPLETE 리스트가 출력되기 때문에 추가 입력한 거 확인하는 항목은 굳이 넣지 않아도 됨 */
            /* 정리하면 if (num == 1) 에서는 할 일 입력하면 저장해서 자동으로 TO DO 리스트에 추가되도록 하고 'end'를 입력하면 다시 1~3번 항목 출력되도록 코드 추가 */

        }
        else if (num == 2)
        {
            cout << "[ 완료한 일 추가 ]" << endl << endl;
            cout << "완료한 일을 입력하세요(완료 후 'end' 입력): ";

            /* 완료한 일을 입력하면 TO DO 리스트에서 COMPLETE 리스트로 자동으로 넘어가도록 코드 추가 */
            /* 할 일 추가 입력이 끝나고 'end'를 입력하면 반복문으로 다시 1~3번 항목 출력되도록 코드 추가 */
            /* TO DO 리스트에 입력된 문장과 동일하게 입력된 문장만 추가되도록 코드 작성 > 다르다면 오류 문장 출력하고 다시 입력하도록 코드 작성 */
            /* 할 일 추가 과정과 마찬가지로 'end' 입력하면 변경된 TO DO 리스트와 COMPLETE 리스트가 출력되기 때문에 추가 입력한 거 확인하는 항목은 굳이 넣지 않아도 됨 */
            /* 정리하면 if (num == 2) 에서는 완료한 일 입력하면 TO DO 리스트에서 COMPLETE 리스트로 넘어가고 'end'를 입력하면 다시 1~3번 항목 출력되고
               TO DO 리스트에 입력된 문장과 다르게 입력했다면 리스트에 없다는 문장 출력하고 다시 입력하도록 코드 추가 */

        }
        else
        {
            cout << "====================================" << endl << endl;
            cout << "TO DO 프로그램이 종료되었습니다." << endl;
            break;
        }
    }
}
